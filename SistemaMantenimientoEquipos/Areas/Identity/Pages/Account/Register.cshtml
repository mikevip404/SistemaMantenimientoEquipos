@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient-primary text-white text-center py-4 rounded-top-3" style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); border: none;">
                    <i class="fas fa-user-plus fa-3x mb-3"></i>
                    <h3 class="mb-0 fw-bold">Crear Cuenta</h3>
                    <p class="mb-0 opacity-75">Únete a nuestro sistema de mantenimiento</p>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-primary"></i>
                                </span>
                                <input asp-for="Input.NombreCompleto" class="form-control border-start-0 ps-0" autocomplete="name" aria-required="true" placeholder="Nombre completo" style="border-left: none; box-shadow: none;" />
                            </div>
                            <span asp-validation-for="Input.NombreCompleto" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="Input.Email" class="form-control border-start-0 ps-0" autocomplete="username" aria-required="true" placeholder="correo@ejemplo.com" style="border-left: none; box-shadow: none;" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-primary"></i>
                                </span>
                                <input asp-for="Input.Password" class="form-control border-start-0 ps-0" autocomplete="new-password" aria-required="true" placeholder="Contraseña segura" style="border-left: none; box-shadow: none;" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-primary"></i>
                                </span>
                                <input asp-for="Input.ConfirmPassword" class="form-control border-start-0 ps-0" autocomplete="new-password" aria-required="true" placeholder="Confirmar contraseña" style="border-left: none; box-shadow: none;" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-primary btn-lg rounded-pill mb-3" style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); border: none; box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);">
                            <i class="fas fa-user-plus me-2"></i>Crear Cuenta
                        </button>

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                ¿Ya tienes cuenta?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">
                                    Iniciar Sesión
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }
    .input-group-text {
        border-radius: 0.375rem 0 0 0.375rem !important;
    }
    .form-control:focus {
        border-color: #bac8f3;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    .card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.95);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
