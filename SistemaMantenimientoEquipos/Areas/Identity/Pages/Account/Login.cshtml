@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient-success text-white text-center py-4 rounded-top-3" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%); border: none;">
                    <i class="fas fa-sign-in-alt fa-3x mb-3"></i>
                    <h3 class="mb-0 fw-bold">Iniciar Sesión</h3>
                    <p class="mb-0 opacity-75">Accede a tu cuenta</p>
                </div>
                <div class="card-body p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-success"></i>
                                </span>
                                <input asp-for="Input.Email" class="form-control border-start-0 ps-0" autocomplete="username" aria-required="true" placeholder="correo@ejemplo.com" style="border-left: none; box-shadow: none;" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-success"></i>
                                </span>
                                <input asp-for="Input.Password" class="form-control border-start-0 ps-0" autocomplete="current-password" aria-required="true" placeholder="Tu contraseña" style="border-left: none; box-shadow: none;" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                    Recordarme
                                </label>
                            </div>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-success btn-lg rounded-pill mb-3" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%); border: none; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </button>

                        <div class="text-center">
                            <div class="mb-2">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted text-decoration-none small">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>
                            <div>
                                <span class="text-muted">¿No tienes cuenta?</span>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold text-decoration-none">
                                    Regístrate aquí
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
    }
    .input-group-text {
        border-radius: 0.375rem 0 0 0.375rem !important;
    }
    .form-control:focus {
        border-color: #90d4a0;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
    .card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.95);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
