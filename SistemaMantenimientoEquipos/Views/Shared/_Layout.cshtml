@using Microsoft.AspNetCore.Identity
@using SistemaMantenimientoEquipos.Models
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Mantenimiento</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #0d6efd;
            color: white;
            transition: all 0.3s;
            z-index: 1040;
        }

        .sidebar.collapsed {
            margin-left: -250px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 12px 20px;
            border-radius: 8px;
            margin: 5px 10px;
            transition: background 0.3s;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #0b5ed7;
        }

        /* Top Navbar */
        .navbar-top {
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            height: 60px;
            background-color: white;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 1030;
            transition: left 0.3s;
        }

        .navbar-top.collapsed {
            left: 0;
        }

        .content {
            margin-left: 250px;
            padding: 90px 30px 30px;
            transition: margin-left 0.3s;
        }

        .content.collapsed {
            margin-left: 0;
        }

        .toggle-btn {
            border: none;
            background: transparent;
            font-size: 1.5rem;
            color: #0d6efd;
        }

        @@media (max-width: 992px) {
            .sidebar {
                margin-left: -250px;
            }
            .sidebar.show {
                margin-left: 0;
            }
            .navbar-top {
                left: 0;
            }
            .content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <div class="text-center mb-4">
            <h5 class="fw-bold"><i class="bi bi-gear-fill"></i> Mantenimiento</h5>
        </div>

        <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
            <i class="bi bi-house-door"></i> Inicio
        </a>
        <a asp-controller="Equipos" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Equipos" ? "active" : "")">
            <i class="bi bi-cpu"></i> Equipos
        </a>
        <a asp-controller="Reportes" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Reportes" ? "active" : "")">
            <i class="bi bi-clipboard-data"></i> Reportes
        </a>
        <a asp-controller="Home" asp-action="Privacy">
            <i class="bi bi-shield-lock"></i> Privacidad
        </a>
    </div>

    <!-- Top Navbar -->
    <div id="navbarTop" class="navbar-top">
        <button class="toggle-btn" id="toggleSidebar"><i class="bi bi-list"></i></button>

        <div class="d-flex align-items-center">
            @if (SignInManager.IsSignedIn(User))
            {
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-info btn-sm me-2" title="Gestionar Usuarios">
                        <i class="bi bi-people-fill"></i> Usuarios
                    </a>
                }
                <span class="me-3 fw-semibold text-secondary"><i class="bi bi-person-circle"></i> @User.Identity?.Name</span>
                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Cerrar sesión</button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-primary btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
            }
        </div>
    </div>

    <!-- Contenido -->
    <div id="content" class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar toggle script
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const navbarTop = document.getElementById('navbarTop');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
            navbarTop.classList.toggle('collapsed');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
