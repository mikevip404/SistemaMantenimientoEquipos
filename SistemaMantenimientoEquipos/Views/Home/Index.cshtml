@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h2 class="fw-bold mb-4 text-primary">Panel de Control</h2>

    <div class="row g-4">
        <!-- Tarjeta de resumen -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h5 class="text-muted">Equipos</h5>
                <h2 class="fw-bold text-primary" id="equiposCount">@ViewBag.EquiposCount</h2>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h5 class="text-muted">Reportes</h5>
                <h2 class="fw-bold text-success" id="reportesCount">@ViewBag.ReportesCount</h2>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <!-- Reportes Recientes -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fas fa-clock"></i> Reportes Recientes</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ReportesRecientes != null && ViewBag.ReportesRecientes.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var reporte in ViewBag.ReportesRecientes)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">@reporte.Titulo</h6>
                                            <p class="mb-1 small text-muted">@reporte.Equipo?.Nombre</p>
                                            <small class="text-muted">@reporte.FechaReporte.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <span class="badge @(reporte.Estado == "Pendiente" ? "bg-warning" : reporte.Estado == "En Proceso" ? "bg-info" : "bg-success")">@reporte.Estado</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>No hay reportes recientes</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Tipos de Equipos -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Tipos de Equipos</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TiposEquipos != null && ViewBag.TiposEquipos.Count > 0)
                    {
                        <div class="row">
                            @foreach (var tipo in ViewBag.TiposEquipos)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100 border-0 bg-light">
                                        <div class="card-body text-center">
                                            <i class="fas fa-cog fa-2x text-primary mb-2"></i>
                                            <h6 class="card-title">@tipo.Tipo</h6>
                                            <h4 class="text-primary">@tipo.Cantidad</h4>
                                            <small class="text-muted">equipos</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-cogs fa-3x mb-3"></i>
                            <p>No hay tipos de equipos registrados</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones Rápidas -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Equipos" asp-action="Create" class="btn btn-outline-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-plus-circle fa-2x mb-2"></i>
                                <span>Nuevo Equipo</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Reportes" asp-action="Create" class="btn btn-outline-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-file-alt fa-2x mb-2"></i>
                                <span>Nuevo Reporte</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Equipos" asp-action="Index" class="btn btn-outline-info btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-list fa-2x mb-2"></i>
                                <span>Ver Equipos</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-warning btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-clipboard-list fa-2x mb-2"></i>
                                <span>Ver Reportes</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


