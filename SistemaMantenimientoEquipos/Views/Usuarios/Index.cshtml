@model IEnumerable<SistemaMantenimientoEquipos.Controllers.UserRolesViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-users"></i> Gestión de Usuarios y Roles</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-envelope"></i> Email
                                    </th>
                                    <th>
                                        <i class="fas fa-user"></i> Nombre Completo
                                    </th>
                                    <th>
                                        <i class="fas fa-user-tag"></i> Roles
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-tools"></i> Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model) {
                                <tr>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        @user.NombreCompleto
                                    </td>
                                    <td>
                                        @foreach (var role in user.Roles) {
                                            <span class="badge bg-secondary me-1">@role</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Editar Roles
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>