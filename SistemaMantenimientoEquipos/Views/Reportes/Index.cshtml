@model IEnumerable<SistemaMantenimientoEquipos.Models.Reporte>

@{
    ViewData["Title"] = "Reportes";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-file-alt"></i> Gestión de Reportes</h4>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Nuevo Reporte
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label for="estado" class="form-label">Estado</label>
                                <select name="estado" id="estado" class="form-select" asp-items='new SelectList(new List<SelectListItem>
                                {
                                    new SelectListItem { Value = "", Text = "Todos" },
                                    new SelectListItem { Value = "Pendiente", Text = "Pendiente" },
                                    new SelectListItem { Value = "En Proceso", Text = "En Proceso" },
                                    new SelectListItem { Value = "Completado", Text = "Completado" }
                                }, "Value", "Text", ViewData["Estado"])'></select>
                            </div>
                            <div class="col-md-2">
                                <label for="fechaDesde" class="form-label">Fecha Desde</label>
                                <input type="date" name="fechaDesde" id="fechaDesde" class="form-control" value="@ViewData["FechaDesde"]" />
                            </div>
                            <div class="col-md-2">
                                <label for="fechaHasta" class="form-label">Fecha Hasta</label>
                                <input type="date" name="fechaHasta" id="fechaHasta" class="form-control" value="@ViewData["FechaHasta"]" />
                            </div>
                            <div class="col-md-2">
                                <label for="equipoId" class="form-label">Equipo</label>
                                <select name="equipoId" id="equipoId" class="form-select" asp-items="ViewBag.Equipos">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search"></i> Filtrar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Limpiar
                                </a>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-heading"></i> @Html.DisplayNameFor(model => model.Titulo)
                                    </th>
                                    <th>
                                        <i class="fas fa-align-left"></i> @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        <i class="fas fa-calendar-day"></i> @Html.DisplayNameFor(model => model.FechaReporte)
                                    </th>
                                    <th>
                                        <i class="fas fa-tasks"></i> @Html.DisplayNameFor(model => model.Estado)
                                    </th>
                                    <th>
                                        <i class="fas fa-cogs"></i> @Html.DisplayNameFor(model => model.Equipo)
                                    </th>
                                    <th>
                                        <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Usuario)
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-tools"></i> Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Titulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaReporte)
                                    </td>
                                    <td>
                                        <span class="badge @(item.Estado == "Pendiente" ? "bg-warning" : item.Estado == "En Proceso" ? "bg-info" : "bg-success")">
                                            @Html.DisplayFor(modelItem => item.Estado)
                                        </span>
                                    </td>
                                    <td>
                                        @(item.Equipo?.Nombre ?? "Sin asignar")
                                    </td>
                                    <td>
                                        @item.Usuario?.Email
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                                            <i class="fas fa-eye"></i> Detalles
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
