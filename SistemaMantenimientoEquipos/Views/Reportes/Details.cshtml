@model SistemaMantenimientoEquipos.Models.Reporte

@{
    ViewData["Title"] = "Detalles del Reporte";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-eye"></i> Detalles del Reporte</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">
                            <i class="fas fa-heading"></i> @Html.DisplayNameFor(model => model.Titulo)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Titulo)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            <i class="fas fa-align-left"></i> @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            <i class="fas fa-calendar-day"></i> @Html.DisplayNameFor(model => model.FechaReporte)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaReporte)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            <i class="fas fa-tasks"></i> @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Estado == "Pendiente" ? "bg-warning" : Model.Estado == "En Proceso" ? "bg-info" : "bg-success")">
                                @Html.DisplayFor(model => model.Estado)
                            </span>
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            <i class="fas fa-cogs"></i> @Html.DisplayNameFor(model => model.Equipo)
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.Equipo?.Nombre ?? "Sin asignar")
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Usuario)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Usuario.Id)
                        </dd>
                    </dl>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

