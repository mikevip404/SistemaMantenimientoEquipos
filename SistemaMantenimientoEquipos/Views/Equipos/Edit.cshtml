@model SistemaMantenimientoEquipos.Models.Equipo

@{
    ViewData["Title"] = "Editar Equipo";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Editar Equipo</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="EquipoId" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">
                                    <i class="fas fa-tag"></i> Nombre del Equipo
                                </label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Tipo" class="control-label">
                                    <i class="fas fa-cog"></i> Tipo de Equipo
                                </label>
                                <input asp-for="Tipo" class="form-control" placeholder="Ingrese el tipo" />
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">
                                <i class="fas fa-info-circle"></i> Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Estado" class="form-label">
                                    <i class="fas fa-check-circle"></i> Estado
                                </label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="Activo">Activo</option>
                                    <option value="En Reparación">En Reparación</option>
                                    <option value="Fuera de Servicio">Fuera de Servicio</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaRegistro" class="form-label">
                                    <i class="fas fa-calendar"></i> Fecha de Registro
                                </label>
                                <input asp-for="FechaRegistro" class="form-control" type="date" />
                                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
