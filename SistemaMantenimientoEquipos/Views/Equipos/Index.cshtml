@model IEnumerable<SistemaMantenimientoEquipos.Models.Equipo>

@{
    ViewData["Title"] = "Equipos";

    string GetStatusBadgeClass(string estado)
    {
        return estado switch
        {
            "Activo" => "bg-success",
            "En Reparación" => "bg-warning",
            "Fuera de Servicio" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-cogs"></i> Gestión de Equipos</h4>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Nuevo Equipo
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        <i class="fas fa-cog"></i> @Html.DisplayNameFor(model => model.Tipo)
                                    </th>
                                    <th>
                                        <i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        <i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.Estado)
                                    </th>
                                    <th>
                                        <i class="fas fa-calendar"></i> @Html.DisplayNameFor(model => model.FechaRegistro)
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-tools"></i> Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Estado)">
                                            @Html.DisplayFor(modelItem => item.Estado)
                                        </span>
                                    </td>
                                    <td>
                                        @item.FechaRegistro.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.EquipoId" class="btn btn-warning btn-sm me-1">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.EquipoId" class="btn btn-info btn-sm me-1">
                                            <i class="fas fa-eye"></i> Detalles
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.EquipoId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
